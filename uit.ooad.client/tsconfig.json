{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "esnext"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "node",
      "mocha",
      "chai",
      "webpack-env",
      "vue-notification"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    ".nyc_output",
    ".vscode",
    ".nuxt",
    "dist",
    "coverage",
    "modules/typescript.js",
    "test/ts-register.js",
    "nuxt.config.js",
    ".eslintrc.js"
  ]
}
